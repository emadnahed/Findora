# ==============================================================================
# Findora Search API - Environment Configuration
# ==============================================================================
# Copy this file to .env and modify values as needed
# DO NOT commit .env to version control
# ==============================================================================

# Application
APP_NAME=Findora Search API
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=products
ELASTICSEARCH_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_SEARCH=20/minute
RATE_LIMIT_BULK=50/minute
# REDIS_URL=redis://localhost:6379

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000

# Connection Pooling
ELASTICSEARCH_MAX_CONNECTIONS=100
ELASTICSEARCH_MAX_CONNECTIONS_PER_HOST=10
